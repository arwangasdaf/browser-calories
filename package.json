{
  "name": "browser-calories-chrome",
  "version": "0.0.1",
  "description": "",
  "main": "src/scripts/main.js",
  "license": "MIT",
  "dependencies": {
    "react": "^0.14.8",
    "react-dom": "^0.14.8"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "node-sass": "^3.4.2",
    "onchange": "^2.2.0",
    "parallelshell": "^2.0.0",
    "watchify": "^3.7.0"
  },
  "scripts": {
    "start": "npm run build",
    "build": "npm run build:scripts && npm run build:styles",
    "build:scripts": "browserify src/scripts/main.js -t [ babelify --presets [ es2015 react ] ] -o dist/scripts/main.js",
    "build:styles": "node-sass src/styles/main.scss dist/styles/main.css --output-style compressed -q",
    "watch": "parallelshell 'npm run watch:scripts' 'npm run watch:styles'",
    "watch:scripts": "onchange 'src/scripts/*.js' -- npm run build:scripts",
    "watch:styles": "onchange 'src/styles/*.scss' -- npm run build:styles"
  }
}
